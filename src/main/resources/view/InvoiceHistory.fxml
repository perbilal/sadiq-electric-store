<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sadiqstore.controller.InvoiceHistoryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Sales History">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      
      <TextField fx:id="searchField" promptText="Search by Customer Name..." />

      <TableView fx:id="invoiceTable" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colId" prefWidth="60.0" text="ID" />
          <TableColumn fx:id="colDate" prefWidth="180.0" text="Date &amp; Time" />
          <TableColumn fx:id="colCustomer" prefWidth="180.0" text="Customer Name" />
          <TableColumn fx:id="colTotal" prefWidth="120.0" text="Total (Rs)" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      
      <HBox spacing="10.0">
          <Button onAction="#handleViewDetails" style="-fx-background-color: #17a2b8; -fx-text-fill: white;" text="ðŸ‘ View Items" />
          <Button onAction="#handleEditInvoice" style="-fx-background-color: #ffc107;" text="âœï¸ Edit / Update" />
          <Button onAction="#handleDeleteInvoice" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="ðŸ—‘ Delete Invoice" />
      </HBox>
   </children>
</VBox>