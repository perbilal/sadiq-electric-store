<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sadiqstore.controller.CustomerController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Customer Credit Management">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <TextField fx:id="nameField" promptText="New Customer Name" />
            <TextField fx:id="phoneField" promptText="Phone (Optional)" />
            <Button onAction="#addCustomer" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="+ Add Customer" />
            
            <Label maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" /> <TextField fx:id="searchField" promptText="Search Customer..." />
         </children>
      </HBox>
      
      <TableView fx:id="customerTable" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="colName" prefWidth="200.0" text="Name" />
          <TableColumn fx:id="colPhone" prefWidth="150.0" text="Phone" />
          <TableColumn fx:id="colCredit" prefWidth="150.0" text="Current Udhaar (Rs)" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      
      <HBox spacing="15.0" alignment="CENTER_RIGHT">
          <Label text="Select a customer to manage:" textFill="#666666" />
          <Button onAction="#handleUpdateCredit" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="ðŸ’° Add / Receive Payment">
             <font><Font name="System Bold" size="13.0" /></font>
          </Button>
          <Button onAction="#handleViewHistory" style="-fx-background-color: #17a2b8; -fx-text-fill: white;" text="ðŸ“œ View History" />
          <Button onAction="#handleDeleteCustomer" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="ðŸ—‘ Delete Customer" />
      </HBox>
   </children>
</VBox>