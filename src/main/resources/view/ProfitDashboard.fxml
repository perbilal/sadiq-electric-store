<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sadiqstore.controller.ProfitController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Profit &amp; Loss Dashboard">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      
      <HBox spacing="20.0">
         <children>
            <VBox alignment="CENTER" prefHeight="100.0" prefWidth="250.0" style="-fx-background-color: #17a2b8; -fx-background-radius: 10;">
               <children>
                  <Label text="Total Revenue" textFill="WHITE">
                     <font><Font size="16.0" /></font>
                  </Label>
                  <Label fx:id="revenueLabel" text="Rs. 0.0" textFill="WHITE">
                     <font><Font name="System Bold" size="26.0" /></font>
                  </Label>
               </children>
            </VBox>
            
            <VBox alignment="CENTER" prefHeight="100.0" prefWidth="250.0" style="-fx-background-color: #dc3545; -fx-background-radius: 10;">
               <children>
                  <Label text="Total Cost (Est.)" textFill="WHITE">
                     <font><Font size="16.0" /></font>
                  </Label>
                  <Label fx:id="costLabel" text="Rs. 0.0" textFill="WHITE">
                     <font><Font name="System Bold" size="26.0" /></font>
                  </Label>
               </children>
            </VBox>
            
            <VBox alignment="CENTER" prefHeight="100.0" prefWidth="250.0" style="-fx-background-color: #28a745; -fx-background-radius: 10;">
               <children>
                  <Label text="Net Profit" textFill="WHITE">
                     <font><Font size="16.0" /></font>
                  </Label>
                  <Label fx:id="profitLabel" text="Rs. 0.0" textFill="WHITE">
                     <font><Font name="System Bold" size="26.0" /></font>
                  </Label>
               </children>
            </VBox>
         </children>
      </HBox>
      
      <Label text="Top Selling Products">
         <font><Font name="System Bold" size="18.0" /></font>
      </Label>
      
      <BarChart fx:id="salesChart" title="Quantity Sold" VBox.vgrow="ALWAYS">
        <xAxis>
          <CategoryAxis label="Product" side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis label="Units Sold" side="LEFT" />
        </yAxis>
      </BarChart>
   </children>
</VBox>